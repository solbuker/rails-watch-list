<h2><%=(@list.name).capitalize%></h2>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><li><%= bookmark.movie.title %></li>
    <li class="list-group-item"><%= bookmark.movie.overview %></li>
    <li class="list-group-item"><img src='<%= bookmark.movie.poster_url %>' width="300" height="400"></li>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to "Delete bookmark",
            bookmark_path(bookmark.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } %>
    </li>

  <% end %>
</ul>
<%= link_to "Add bookmark", new_list_bookmark_path(@list.id)%>
<%= link_to "Delete list",
            list_path(@list),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } %>
<%= link_to "Back to lists", lists_path%>
