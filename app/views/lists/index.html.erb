<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2942&q=80);">
  <div class="container">
    <h1> <strong>Movies</strong></h1>
    <p>All your movie lists in one place</p>
  </div>
</div>

<div class='container'>
  <h1 class='title'>Lists</h1>
  <div class='box'>
    <ul class = 'list'>
      <%@lists.each do |list|%>
        <li><div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list.name.upcase!, list_path(list)%>
          </div>
        </li>
      <%end%>
    </ul>
  </div>
</div>
